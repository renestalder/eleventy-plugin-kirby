{
  "name": "eleventy-plugin-kirby",
  "version": "0.4.0",
  "description": "Eleventy (11ty) plugin to make the work with Kirby CMS easier",
  "main": "dist/index.js",
  "files": [
    "/dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublish": "npm run build && npm test",
    "watch": "rm -rf ./dist && tsc --watch",
    "test": "npm run build && ava test/index.js",
    "lint-staged": "lint-staged",
    "build": "rm -rf ./dist && tsc",
    "release": "standard-version",
    "docs": "typedoc"
  },
  "hooks": {
    "pre-commit": "npm run lint-staged",
    "pre-push": "npm run test"
  },
  "keywords": [
    "11ty",
    "eleventy",
    "kirby",
    "kirbycms",
    "getkirby"
  ],
  "author": "Ren√© Stalder <mail@renestalder.me>",
  "license": "MIT",
  "homepage": "https://gitlab.com/renestalder/eleventy-plugin-kirby",
  "repository": "gitlab:renestalder/eleventy-plugin-kirby",
  "peerDependencies": {
    "@11ty/eleventy": ">=0.11.0"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "node-fetch": "2.6.7",
    "normalizr": "^3.6.1"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "ava": "^3.15.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0",
    "typedoc": "^0.23.0",
    "typedoc-plugin-markdown": "^3.4.0",
    "typescript": "^4.1.3"
  },
  "ava": {
    "failFast": false,
    "files": [
      "./test/*.js"
    ]
  },
  "lint-staged": {
    "*.{js,css,md,json}": [
      "prettier --write"
    ]
  }
}
